<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/startGameFragment">
    <fragment
        android:id="@+id/startGameFragment"
        android:name="com.mansi.quizassignment.ui.StartGameFragment"
        android:label="@string/quiz"
        tools:layout="@layout/fragment_start_game">
        <argument
            android:name="flowStepNumber"
            app:argType="integer"
            android:defaultValue="0"/>
        <action
            android:id="@+id/action_startGameFragment_to_MCQFragment"
            app:destination="@id/MCQFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:launchSingleTop="true" />
        <action
            android:id="@+id/action_startGameFragment_to_essayFragment"
            app:destination="@id/essayFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            />
        <action
            android:id="@+id/action_startGameFragment_to_uploadFragment"
            app:destination="@id/uploadFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit" />

    </fragment>
    <fragment
        android:id="@+id/essayFragment"
        android:name="com.mansi.quizassignment.ui.EssayFragment"
        android:label="fragment_essay"
        tools:layout="@layout/fragment_essay" >
        <argument
            android:name="flowStepNumber"
            app:argType="integer"/>
        <argument
            android:name="dataResponse"
            app:argType="com.mansi.quizassignment.models.ItemResponse"
            android:defaultValue="@null"
            app:nullable="true"/>
        <action
            android:id="@+id/action_startGameFragment_to_MCQFragment"
            app:destination="@id/MCQFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popUpTo="@id/startGameFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_startGameFragment_to_essayFragment"
            app:destination="@id/essayFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popUpTo="@id/startGameFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_startGameFragment_to_uploadFragment"
            app:destination="@id/uploadFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popUpTo="@id/startGameFragment" />

    </fragment>
    <fragment
        android:id="@+id/uploadFragment"
        android:name="com.mansi.quizassignment.ui.UploadFragment"
        android:label="fragment_upload"
        tools:layout="@layout/fragment_upload">
        <argument
            android:name="flowStepNumber"
            app:argType="integer"
            android:defaultValue="0"/>
        <argument
            android:name="dataResponse"
            app:argType="com.mansi.quizassignment.models.ItemResponse"
            android:defaultValue="@null"
            app:nullable="true"/>
        <action
            android:id="@+id/action_startGameFragment_to_MCQFragment"
            app:destination="@id/MCQFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popUpTo="@id/startGameFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_startGameFragment_to_essayFragment"
            app:destination="@id/essayFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popUpTo="@id/startGameFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_startGameFragment_to_uploadFragment"
            app:destination="@id/uploadFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popUpTo="@id/startGameFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/MCQFragment"
        android:name="com.mansi.quizassignment.ui.MCQFragment"
        android:label="fragment_m_c_q"
        tools:layout="@layout/fragment_m_c_q" >
        <argument
            android:name="flowStepNumber"
            app:argType="integer"/>
        <argument
            android:name="dataResponse"
            app:argType="com.mansi.quizassignment.models.ItemResponse"
            android:defaultValue="@null"
            app:nullable="true"/>
        <action
            android:id="@+id/action_MCQFragment_to_FInishFragment"
            app:destination="@id/FInishFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popUpTo="@id/startGameFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/FInishFragment"
        android:name="com.mansi.quizassignment.ui.FInishFragment"
        android:label="fragment_f_inish"
        tools:layout="@layout/fragment_f_inish">
    </fragment>
</navigation>